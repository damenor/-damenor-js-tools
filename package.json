{
  "version": "0.3.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "start": "tsdx watch",
    "build": "tsdx build",
    "build:docs": "npx typedoc src/index.ts",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "docs": "live-server ./docs"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@damenor/js-tools",
  "author": "David Menor <damenor.develop@gmail.com>",
  "module": "dist/js-tools.esm.js",
  "size-limit": [
    {
      "path": "dist/js-tools.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/js-tools.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "husky": "^7.0.4",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.3"
  },
  "dependencies": {}
}
